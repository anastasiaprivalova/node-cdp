{
  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "globals": {
    "it": true,
    "describe": true
  },
  "rules": {
    // override default options
    "node/no-unsupported-features": "off",

    // temporary options
    "no-console": "off",
    "no-unused-vars": "off"
  }
}