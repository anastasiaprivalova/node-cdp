{
  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "it": true,
    "describe": true
  },
  "rules": {
    "node/no-unsupported-features": "off",
    "node/no-unpublished-require": ["error", {
      "allowModules": ["babel-register"]
    }],

    "no-console": "off",
    "no-unused-vars": "off"
  }
}